{
  "name": "sitecore-helix-for-frontend",
  "version": "1.0.0",
  "description": "example of a front-end application for sitecore helix projects",
  "main": "gulpfile.js",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "build": "lerna bootstrap --hoist && lerna run build",
    "dev": "lerna run dev --parallel | npm run autopublish | npm run serve",
    "autopublish": "onchange \"dist/**/*.*\" -- npm run publish",
    "serve": "browser-sync start --files \"C:/inetpub/wwwroot/thercn.sc/dist/\" \"C:/inetpub/wwwroot/thercn.sc/Views/\" --proxy \"https://local.rcn.org.uk\"",
    "publish": "copyfiles dist/**/*.* C:/inetpub/wwwroot/thercn.sc",
    "lintSCSS": "stylelint \"./**/*.scss\" --fix",
    "lintJS": "eslint \"./**/*.js\" --config \"../.eslintrc.js\" --fix",
    "lint": "npm run lintSCSS && npm run lintJS",
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "transformIgnorePatterns": [
      "<rootDir>/bower_components/",
      "<rootDir>/node_modules/",
      "<rootDir>/obj/"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phoen1x84/sitecore-helix-for-frontend.git"
  },
  "keywords": [
    "sitecore-helix",
    "sitecore-frontend"
  ],
  "author": "Matthew Neil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Phoen1x84/sitecore-helix-for-frontend/issues"
  },
  "homepage": "https://github.com/Phoen1x84/sitecore-helix-for-frontend#readme",
  "devDependencies": {
    "browser-sync": "^2.26.10",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "onchange": "^7.0.2",
    "stylelint": "^13.6.1"
  }
}